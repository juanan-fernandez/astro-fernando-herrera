---
import '@styles/global.css'
import Layout from '@layouts/Layout.astro'
import PostItem_Col from '@components/PostItem_Col.astro'
import { siteConfig } from 'config/site-config'
import { getCollection } from 'astro:content'

const posts = await getCollection('blog')
---

<Layout title='mi blog'>
	<!-- component -->
	<section class='bg-gray-800'>
		<div class='container px-6 py-10 mx-auto'>
			<h1 class='text-3xl font-semiboldcapitalize lg:text-4xl text-white'>{siteConfig.title}</h1>
			<a href='/blog/1' class='text-sm text-gray-300'>Blog Paginado</a>
			<div class='grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2'>
				{posts.map(post => <PostItem_Col {post} />)}
			</div>
		</div>
	</section>
</Layout>
