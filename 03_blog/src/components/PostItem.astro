---
import { FormatDate } from '@utils/date-utils.ts'
const { frontmatter, url } = Astro.props
const { title, date, image } = frontmatter
---

<div class='lg:flex'>
	<img class='object-cover w-full h-56 rounded-lg lg:w-64' src={image} alt={title} />

	<div class='flex flex-col justify-between py-6 lg:mx-6'>
		<a href={url} class='text-xl font-semibold hover:underline text-white'>
			{title}
		</a>

		<span class='text-sm text-gray-300'>On: {FormatDate.format(date)}</span>
	</div>
</div>
