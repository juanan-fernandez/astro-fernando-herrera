---
interface Props {
	name: string
	url: string
	isBig?: boolean
}
const { name, url, isBig = false } = Astro.props
const pokemonId = url.split('/')[6]
const imageSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${pokemonId}.png`
---

<div class=`flex flex-col justify-center items-center`>
	<img
		transition:name=`fade-${pokemonId}`
		src={imageSrc}
		alt={name}
		class:list={[{ 'w-56 h-56': isBig }, { 'w-24 h-24': !isBig }]}
	/>

	<span class='text-slate-200 hover:text-white capitalize'>
		{!isBig && `#${pokemonId} ${name}`}
	</span>
</div>
